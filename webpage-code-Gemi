            const competitorGrid = document.getElementById('competitor-grid');
            const modal = document.getElementById('competitor-modal');
            const modalTitle = document.getElementById('modal-title');
            const modalSegment = document.getElementById('modal-segment');
            const modalBody = document.getElementById('modal-body');
            const modalClose = document.getElementById('modal-close');

            function createCompetitorCard(name, data) {
                const card = document.createElement('div');
                card.className = 'competitor-card bg-white p-6 rounded-lg shadow-md cursor-pointer hover:shadow-xl hover:scale-105 transition-all duration-300';
                card.dataset.segment = data.segment;
                card.dataset.name = name;

                card.innerHTML = `
                    <h3 class="text-xl font-bold text-slate-900">${name}</h3>
                    <p class="text-sm text-teal-600 font-semibold mt-1">${data.segment}</p>
                    <p class="text-slate-600 mt-2 text-sm"><strong>תחומי מיקוד AI:</strong> ${data.focus.join(', ')}</p>
                `;
                
                card.addEventListener('click', () => openModal(name, data));
                return card;
            }

            function renderGrid(filter = 'all') {
                competitorGrid.innerHTML = '';
                Object.entries(competitorData).forEach(([name, data]) => {
                    if (name === "ICL Group") return;
                    if (filter === 'all' || data.segment === filter) {
                        const card = createCompetitorCard(name, data);
                        competitorGrid.appendChild(card);
                    }
                });
            }

            function openModal(name, data) {
                modalTitle.textContent = name;
                modalSegment.textContent = data.segment;
                modalBody.innerHTML = data.content;
                modal.classList.remove('hidden');
                setTimeout(() => {
                    modal.style.opacity = '1';
                    modal.style.pointerEvents = 'auto';
                    modal.querySelector('div').style.transform = 'scale(1)';
                }, 10);
            }

            function closeModal() {
                modal.style.opacity = '0';
                modal.style.pointerEvents = 'none';
                modal.querySelector('div').style.transform = 'scale(0.95)';
                setTimeout(() => modal.classList.add('hidden'), 300);
            }

            modalClose.addEventListener('click', closeModal);
            modal.addEventListener('click', (e) => {
                if (e.target === modal) {
                    closeModal();
                }
            });
            
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', () => {
                    document.querySelectorAll('.filter-btn').forEach(b => {
                        b.classList.remove('bg-teal-500', 'text-white');
                        b.classList.add('bg-white', 'text-slate-700');
                    });
                    btn.classList.add('bg-teal-500', 'text-white');
                    btn.classList.remove('bg-white', 'text-slate-700');
                    renderGrid(btn.dataset.filter);
                });
            });

            const useCaseTabs = document.querySelectorAll('.use-case-tab');
            const useCaseContent = document.getElementById('use-case-content');
            
            function updateUseCaseContent(targetId) {
                const data = useCaseData[targetId];
                useCaseContent.innerHTML = `
                    <h3 class="text-xl font-bold text-slate-900 mb-4">${data.title}</h3>
                    ${data.content}
                `;
            }

            useCaseTabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    useCaseTabs.forEach(t => {
                        t.classList.remove('bg-teal-500', 'text-white');
                        t.classList.add('bg-white', 'text-slate-600');
                    });
                    tab.classList.add('bg-teal-500', 'text-white');
                    tab.classList.remove('bg-white', 'text-slate-600');
                    updateUseCaseContent(tab.dataset.target);
                });
            });

            const competitorFocusCtx = document.getElementById('competitorFocusChart').getContext('2d');
            const focusLabels = ["חקלאות מדויקת", "תפעול ושרשרת אספקה", "שירות לקוחות", "מו\"פ"];
            const chartData = {
                labels: Object.keys(competitorData).filter(name => name !== "ICL Group"),
                datasets: focusLabels.map((label, index) => ({
                    label: label,
                    data: Object.entries(competitorData).filter(([name, _]) => name !== "ICL Group").map(([_, data]) => data.focus.includes(label) ? 1 : 0),
                    backgroundColor: ['#14b8a6', '#0ea5e9', '#f59e0b', '#6366f1'][index],
                }))
            };

            new Chart(competitorFocusCtx, {
                type: 'bar',
                data: chartData,
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            stacked: true,
                            display: false,
                        },
                        y: {
                            stacked: true,
                            ticks: {
                                font: {
                                    family: "'Assistant', sans-serif",
                                }
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'top',
                            labels: {
                                font: {
                                    family: "'Assistant', sans-serif",
                                }
                            }
                        },
                        tooltip: {
                            enabled: false
                        }
                    }
                }
            });

            const iclVsCompetitorsCtx = document.getElementById('iclVsCompetitorsChart').getContext('2d');
            const fertilizerCompetitors = Object.values(competitorData).filter(d => d.segment === 'דשנים' && d !== competitorData['ICL Group']);
            const competitorAverages = focusLabels.map(label => {
                const total = fertilizerCompetitors.reduce((sum, comp) => sum + (comp.focus.includes(label) ? 1 : 0), 0);
                return (total / fertilizerCompetitors.length) * 100;
            });
            const iclDataPoints = focusLabels.map(label => competitorData['ICL Group'].focus.includes(label) ? 100 : 0);

            new Chart(iclVsCompetitorsCtx, {
                type: 'radar',
                data: {
                    labels: focusLabels,
                    datasets: [{
                        label: 'ICL Group',
                        data: iclDataPoints,
                        fill: true,
                        backgroundColor: 'rgba(20, 184, 166, 0.2)',
                        borderColor: 'rgb(20, 184, 166)',
                        pointBackgroundColor: 'rgb(20, 184, 166)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(20, 184, 166)'
                    }, {
                        label: 'ממוצע מתחרי דשנים',
                        data: competitorAverages,
                        fill: true,
                        backgroundColor: 'rgba(59, 130, 246, 0.2)',
                        borderColor: 'rgb(59, 130, 246)',
                        pointBackgroundColor: 'rgb(59, 130, 246)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(59, 130, 246)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    elements: {
                        line: {
                            borderWidth: 3
                        }
                    },
                     plugins: {
                        legend: {
                             labels: {
                                font: {
                                    family: "'Assistant', sans-serif",
                                }
                            }
                        }
                    },
                    scales: {
                        r: {
                            angleLines: {
                                display: false
                            },
                            suggestedMin: 0,
                            suggestedMax: 100,
                            ticks: {
                                stepSize: 25,
                                backdropColor: 'rgba(0,0,0,0)'
                            },
                             pointLabels: {
                                font: {
                                    size: 12,
                                    family: "'Assistant', sans-serif"
                                }
                            }
                        }
                    }
                }
            });
            
            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 80) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active-nav');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active-nav');
                    }
                });
            });

            renderGrid();
            updateUseCaseContent('uc-1');
        });
    </script>

</body>
</html>
